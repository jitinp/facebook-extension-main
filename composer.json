{
    "name": "blitzz/jitin-ext-main-facebook",
    "description": "Allow users to log in with Facebook.",
    "type": "flarum-extension",
    "keywords": ["authentication"],
    "license": "MIT",
    "authors": [
        {
            "name": "Jitin Pillai"
        }
    ],
    "support": {
        "issues": "https://github.com/flarum/core/issues",
        "source": "https://github.com/jitinp/facebook-extension-main"
    },
    "require": {
        "flarum/core": "^0.1.0-beta.5",
        "league/oauth2-facebook": "~1.0",
        "facebook/graph-sdk": "^5.4"
    },
    "autoload": {
        "psr-4": {
            "Blitzz\\Main\\Facebook\\": "src/"
        }
    },
    "extra": {
        "branch-alias": {
            "dev-master": "0.1.x-dev"
        },
        "flarum-extension": {
            "title": "Facebook Login",
            "icon": {
                "name": "facebook",
                "backgroundColor": "#3b5998",
                "color": "#fff"
            }
        }
    }
}
